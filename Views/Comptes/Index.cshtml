@model IEnumerable<Bank.Models.Compte>

@{
    ViewData["Title"] = "Index";
}
<head>
        <!-- CSS Files -->
    <link id="pagestyle" href="~/css/style.css?v=1" rel="stylesheet" asp-append-version="true"/>
</head>

<div class="row justify-content-center">
    <a asp-action="Create" class="btn btn-secondary" style="margin-top:100px;">Ajouter Compte</a>
</div>

<div class="col-md-12 ml-auto mr-auto" style="margin-top:50px;">
        <div class="card Application-list">
        <div class="card-header">
            <h5>listes des Comptes</h5>
        </div>
            <div class="card-block pb-0">
                <div class="table-responsible">
                    <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.intitule_compte)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.date_ouverture)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.solde)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.numero_compte)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.client)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.type)
                                    </th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                    <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.intitule_compte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.date_ouverture)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.solde)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numero_compte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.client.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type.Id)
                            </td>
                            <td>
                                <button class="btn btn-light"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |</button>
                                <button class="btn btn-info"><a asp-action="Details" asp-route-id="@item.Id">Details</a> |</button>
                                <button class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                            </td>
                        </tr>
                      }
                </tbody>
    </table>

      </div>
</div>
       </div>
</div>
