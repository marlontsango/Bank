@model Bank.Models.Retrait

@{
    ViewData["Title"] = "Create";
}

<h1 style=" font-weight:300;" class="text-center mt-3">Effectuer un rétrait </h1>

<h4>Retrait</h4>
<hr />
<div class="row justify-content-center">
    <div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="motif_retrait" class="control-label"></label>
                <input asp-for="motif_retrait" class="form-control" />
                <span asp-validation-for="motif_retrait" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_retrait" class="control-label"></label>
                <input asp-for="date_retrait" class="form-control" />
                <span asp-validation-for="date_retrait" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="montant_retrait" class="control-label"></label>
                <input asp-for="montant_retrait" class="form-control" />
                <span asp-validation-for="montant_retrait" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompteId" class="control-label"></label>
                <select asp-for="CompteId" class ="form-control" asp-items="ViewBag.CompteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary col-md-12" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
