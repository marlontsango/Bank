@model IEnumerable<Bank.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<head>
            <!-- CSS Files -->
    <link id="pagestyle" href="~/css/style.css?v=1" rel="stylesheet" asp-append-version="true"/>
</head>

<div class="row justify-content-center">
    <a asp-action="Create" class="btn btn-secondary" style="margin-top:100px;">Ajouter Client</a>
</div>

<div class="col-md-12 ml-auto mr-auto" style="margin-top:50px;">
    <div class="card Application-list">
        <div class="card-header">
            <h5>listes des clients</h5>
        </div>
            <div class="card-block pb-0">
                <div class="table-responsible">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.nom_client)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prenom_client)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.date_naissance)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.adresse)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.telephone)
                                </th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nom_client)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.prenom_client)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_naissance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.adresse)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.telephone)
                                </td>
                                <td>
                                    <button class="btn btn-light"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |</button>
                                    <button class="btn btn-info"><a asp-action="Details" asp-route-id="@item.Id">Details</a> |</button>
                                    <button class="btn btn-danger"> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                                </td>
                            </tr>
                    }
                        </tbody>

                    </table>
    </div>

</div>

    </div>
</div>
